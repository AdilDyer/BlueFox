    <div class="form-group">
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Your Good Name"
      />
      <br />

      <select
        type="text"
        name="typeOfAdvertising"
        class="form-control"
        placeholder="Type of Advertising"
